<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ElectricityBillEstimator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        <item name="materialButtonStyle">@style/App.Widget.MaterialButton</item>
        <item name="buttonBarButtonStyle">@style/App.Widget.MaterialButton.TextButton</item>
    </style>

    <style name="Theme.ElectricityBillEstimator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ElectricityBillEstimator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="App.Widget.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item> </style>

    <style name="App.Widget.MaterialButton.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item> </style>

</resources>




